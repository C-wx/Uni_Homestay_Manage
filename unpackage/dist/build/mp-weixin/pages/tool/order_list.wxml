<view><view class="topTabBar" style="{{'position:'+(headerPosition)+';'+('top:'+(headerTop)+';')}}"><block wx:for="{{orderType}}" wx:for-item="grid" wx:for-index="tbIndex" wx:key="tbIndex"><view data-event-opts="{{[['tap',[['loadOrder',[tbIndex]]]]]}}" class="grid" bindtap="__e"><view class="{{['text',tbIndex==tabbarIndex?'on':'']}}">{{grid}}</view></view></block></view><view class="order-list"><view class="list"><block wx:if="{{list.length==0}}"><view class="onorder"><image src="../../static/imgs/noorder.png"></image><view class="text">没有相关订单</view></view></block><block wx:for="{{list}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view class="row"><view class="type">{{typeText[row.status]}}</view><view class="order-info"><view class="left"><image src="{{row.roomInfo.images[0].url}}"></image></view><view class="right"><view class="name">{{''+row.roomInfo.title+''}}</view><view class="spec">{{row.roomInfo.des}}</view><view class="price-number">￥<view class="price">{{row.roomInfo.price}}</view>x<view class="number">{{row.dayCount}}</view></view></view></view><view class="detail"><view class="number">{{"共"+row.dayCount+"晚"}}</view><view class="sum">合计￥<view class="price">{{row.price}}</view></view></view><view class="btns"><block><view data-event-opts="{{[['tap',[['cancelOrder',['$0',index],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">删除</view></block><block wx:if="{{row.status=='WDD'}}"><block><view data-event-opts="{{[['tap',[['agree',['$0',index],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">同意</view><view data-event-opts="{{[['tap',[['refuse',['$0'],[[['list','',index]]]]]]]}}" class="pay" bindtap="__e">拒绝</view></block></block></view></view></block></view></view></view>