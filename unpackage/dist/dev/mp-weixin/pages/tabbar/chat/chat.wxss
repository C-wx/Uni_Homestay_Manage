  box-sizing: border-box;
  color: #333;
  letter-spacing: 0;
  word-wrap: break-word;
}
/* 设置常用元素尺寸规则 */
view, textarea, input, label, form, button, image {
  box-sizing: border-box;
}
/* 按钮样式处理 */
